<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6179FD"
    tools:context=".UI.RegisterActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="90dp"
        android:background="@color/white"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register_text"
               android:layout_centerHorizontal="true"

                android:layout_margin="30dp"
android:layout_alignParentTop="true"

                android:text="Register"


                android:textColor="@color/black"
                android:textSize="24dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/student_name"
                android:layout_marginHorizontal="12dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name"
                android:layout_below="@+id/register_text"
                android:textSize="18dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/student_mail"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Mail"
                android:layout_below="@+id/student_name"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/student_registerno"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_mail"
                android:hint="Register number"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/student_phone"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_registerno"
                android:hint="Phone"
                android:textSize="18dp"
                />

            <EditText
                android:id="@+id/student_CGPA"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_phone"
                android:hint="CGPA"
                android:textSize="18dp"
                />
            <EditText
                android:id="@+id/student_DOB"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_CGPA"
                android:hint="Date of Birth"
                android:textSize="18dp"
                />

            <LinearLayout
                android:id="@+id/Linear_YD"

                android:layout_width="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginVertical="4dp"
                android:layout_below="@id/student_DOB"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/student_year"
                    android:inputType="number"
                    android:layout_width="match_parent"
                   android:layout_weight="1"

                    android:layout_height="wrap_content"
                    android:hint="Year"
                    android:textSize="18dp"
                    />
                <EditText
                    android:id="@+id/student_department"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Department"
                    android:textSize="18dp"
                    />
            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:onClick="onCLickRegister"
                android:id="@+id/register_btn"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/Linear_YD"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/btn_blue"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/want_login_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Already have an account? Login"
                android:textColor="@color/purple_200"
                android:layout_below="@id/register_btn"
                android:gravity="center"
                android:onClick="toLogin"
                android:layout_marginVertical="15dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>